# ===================================================================
# DATA CLEANING PLATFORM - BACKEND ENVIRONMENT CONFIGURATION
# ===================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files with real credentials to version control!

# ===================================================================
# SUPABASE CONFIGURATION (Required)
# ===================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.your-anon-key
SUPABASE_SERVICE_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.your-service-key

# ===================================================================
# DATABASE CONFIGURATION (Required for AI Chat)
# ===================================================================
# PostgreSQL connection string for LangChain functionality
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# ===================================================================
# JWT AUTHENTICATION (Required)
# ===================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ===================================================================
# SERVER CONFIGURATION
# ===================================================================
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# CORS Origins (comma-separated URLs for production)
# Leave empty for development defaults
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.xlsx

# ===================================================================
# EMAIL CONFIGURATION (Optional)
# ===================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
EMAIL_USE_TLS=true

# ===================================================================
# OPENAI/AI CONFIGURATION (Optional)
# ===================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=1000

# ===================================================================
# REDIS CONFIGURATION (Optional)
# ===================================================================
REDIS_URL=redis://localhost:6379

# ===================================================================
# SECURITY NOTES
# ===================================================================
# 
# 1. JWT_SECRET_KEY: Must be at least 32 characters long and cryptographically secure
#    Generate one with: python -c "import secrets; print(secrets.token_hex(32))"
# 
# 2. SUPABASE_SERVICE_KEY: Has admin privileges - never expose in frontend!
# 
# 3. DATABASE_URL: Required for AI chat functionality, get from Supabase settings
# 
# 4. OPENAI_API_KEY: Required only if using AI chat features
# 
# 5. Environment: Set to 'production' for production deployments